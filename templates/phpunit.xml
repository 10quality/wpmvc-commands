<?xml version="1.0"?>
<phpunit
    bootstrap="tests/bootstrap.php"
    backupStaticAttributes="false"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="true">
    <testsuites>
        <testsuite name="{0}">
            <directory suffix="Test.php">./tests/cases/</directory>
        </testsuite>
    </testsuites>
</phpunit>